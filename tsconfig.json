{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "ESNext",
      "target": "es5",
      "jsx": "react-jsxdev",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "types": ["node"],
      "paths": {
        "*": ["./src/*"]
      },
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS"
      }
    }
  }